@model Repository.Model.CategoryModel.CategoryCreateModel

@{
    ViewData["Title"] = "CreateCategory";
    var shopId = ViewBag.ShopId;
    var ListParent = ViewBag.ListParent;
}

<h3>Create Category</h3>

<hr />
<div class="row">
    <div class="col-md-3 d-inline-block">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameCategory" class="control-label"></label>
                <input asp-for="NameCategory" class="form-control" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select class="custom-select" asp-for="ParentId" asp-items="ListParent">
                    <option>---</option>
                </select>
            </div>
            <div class="form-group">
                <a class="btn btn-success text-light" onclick="location.href ='@Url.Action("Index","Product",new {shopId=shopId })'">Back</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
    

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
