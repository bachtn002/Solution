@model Repository.Model.ProductModel.ProductUpdateModel

@{
    ViewData["Title"] = "UpdateProduct";
}

<h3>Update Product</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Properties" class="control-label"></label>
                <input asp-for="Properties" class="form-control" />
                <span asp-validation-for="Properties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductStatusId" class="control-label"></label>
                <select class="custom-select" asp-for="ProductStatusId">
                    <option value="1">Acvticed</option>
                    <option value="2">Deacvticed</option>
                    <option value="3">Sold out</option>
                </select>
                <span asp-validation-for="ProductStatusId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ModifiedUtcDate" class="control-label"></label>
                <input asp-for="ModifiedUtcDate" class="form-control" />
                <span asp-validation-for="ModifiedUtcDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-success text-light" onclick="history.back()">Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
