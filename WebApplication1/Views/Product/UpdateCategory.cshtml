@model Repository.Model.CategoryModel.CategoryUpdateModel

@{
    ViewData["Title"] = "UpdateCategory";
    var CategoryParent = ViewBag.ListTest;
}

<h3>Update Category</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameCategory" class="control-label"></label>
                <input asp-for="NameCategory" class="form-control" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryParentList" class="control-label"></label>
                <select class="custom-select" asp-for="ParentId" asp-items="CategoryParent">
                    <option>select</option>
                </select>
            </div>

            <div class="form-group">
                <a class="btn btn-success text-light" onclick="history.back()">Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
