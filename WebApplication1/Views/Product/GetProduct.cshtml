@model IEnumerable<Repository.Model.ProductModel.ProductViewModel>

@{
    ViewData["Title"] = "GetProduct";
    var shopId = ViewBag.ShopId;
    var categoryId = ViewBag.CategoryId;
}

<h3>Manage Product</h3>

<div class="d-flex justify-content-end mb-2">
    <button class="btn btn-success mr-1" onclick="history.back()">Back</button>
    <button class="btn btn-primary " onclick="location.href = '@Url.Action("CreateProduct","Product",new {shopId=shopId,categoryId=categoryId })'">Create New</button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Properties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductStatusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Images)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Properties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStatusName)
            </td>
            <td>
                <button class="btn btn-warning"
                        onclick="location.href = '@Url.Action("EditProduct", "Product", new { productId = item.ProductId })'">
                    Edit
                </button>
                <button class="btn btn-info"
                        onclick="location.href = '@Url.Action("DetailProduct", "Product", new {productId=item.ProductId })'">
                    Detail
                </button>
                <button class="btn btn-danger"
                        onclick="location.href = '@Url.Action("DeleteProduct","Product",new {productId=item.ProductId })'">
                    Delete
                </button>
                
            </td>
        </tr>
}
    </tbody>
</table>
