@model IEnumerable<Repository.Model.ShopViewModel>

@{
    ViewData["Title"] = "Show";
}

<h2>Shop Manage</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShopStatusName)
            </th>        
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopStatusName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { shopId = item.ShopId }) |
                    @Html.ActionLink("Details", "Details", new { shopId = item.ShopId }) |
                    @Html.ActionLink("Delete", "Delete", new { shopId = item.ShopId }) |
                    @Html.ActionLink("Collaborator", "ViewCollab", new { shopId = item.ShopId }) 
                </td>
            </tr>
        }
    </tbody>
</table>
