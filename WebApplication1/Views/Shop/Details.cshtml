@model Repository.Model.ShopCreateModel

@{
    ViewData["Title"] = "Details";
}

<h3>Manage Shop</h3>

<div>
    <hr />
    <div class="d-flex">
        <a class="btn btn-success mr-1" asp-action="Index">Back</a>
        <button class="btn btn-warning mr-1" onclick="location.href='@Url.Action("Edit", "Shop", new { shopId = Model.ShopId})'">Edit</button>
        <button class="btn btn-info mr-1" onclick="location.href='@Url.Action("ShowCollab", "Shop", new { shopId = Model.ShopId})'">Collaborator</button>
        <div class="dropdown mr-1">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Product
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <button class="dropdown-item" onclick="location.href='@Url.Action("Index", "Product", new { shopId = Model.ShopId})'">ProductPortfolio</button>
                <button class="dropdown-item" onclick="location.href='@Url.Action("GetProduct", "Product", new { shopId = Model.ShopId})'">ProductList</button>
                @*<a class="dropdown-item" href="#">Something else here</a>*@
            </div>
        </div>
        @*<button class="btn btn-info mr-1" >Sale Setting</button>*@
        <button class="btn btn-danger mr-1" onclick="location.href='@Url.Action("Delete", "Shop", new { shopId = Model.ShopId})'">Delete</button>
    </div>
    </br>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedUtcDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedUtcDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Avatar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avatar)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShopStatusName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopStatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SumUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumUser)
        </dd>
    </dl>
</div>

