@model Repository.Model.ShopModel.CollabUpdateModel

@{
    ViewData["Title"] = "EditCollab";
}

<h3>EditCollab</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCollab">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserStatusId" class="control-label"></label>
                <select class="custom-select" asp-for="UserStatusId">
                    <option value="1">Actived</option>
                    <option value="2">Deactived</option>
                </select>
                <span asp-validation-for="UserStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select class="custom-select" asp-for="GenderId">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                    <option value="3">Other</option>
                </select>
                <span asp-validation-for="UserStatusId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select class="custom-select">
                    <option value="2">Collaborator</option>
                    <option value="3">Owner</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="ModifiedUtcDate" class="control-label"></label>
                <input asp-for="ModifiedUtcDate" class="form-control" />
                <span asp-validation-for="ModifiedUtcDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-success text-light" onclick="history.back()">Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
