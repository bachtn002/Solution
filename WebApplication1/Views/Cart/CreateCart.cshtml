@model Repository.Model.CartModel.CartCreateModel

@{
    ViewData["Title"] = "CreateCart";
    var listProduct = ViewBag.ListProduct;
    var shopId = ViewBag.ShopId;
}   

<h1>Cart</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Select Product</label>
                <select class="custom-select" asp-for="ProductId" asp-items="listProduct">
                    <option>---</option>
                </select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountRate" class="control-label"></label>
                <input asp-for="DiscountRate" class="form-control" />
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-success text-light" onclick="location.href = '@Url.Action("Index","Shop", new { })'">Back</a>

                <input type="submit" value="Add to cart" class="btn btn-primary" />

                <a class="btn btn-info text-light" onclick="location.href = '@Url.Action("GetCart","Cart", new {shopId=shopId})'">View Cart</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
